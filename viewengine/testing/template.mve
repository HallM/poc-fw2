<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Friends</title>
</head>
<body>
    <div class="friends">
        {each v:friends {body (friend)
        <div class="friend">
            <ul>
                <li>Name: {!v:getFullNameMve friend}</li>
                <li>
                    Balance: {friend.balance}
                </li>
                <li>
                    Age: {friend.age}
                </li>
                <li>
                    Address: {friend.address}
                </li>
                <li>
                    Image: <img src="{friend.picture}">
                </li>
                <li>
                    Company: {friend.company}
                </li>
                <li>
                    Email: <a href="mailto:{friend.email}">{friend.email}</a>
                </li>
                <li>
                    About: {friend.about}
                </li>
                {if friend.tags {body
                <li>
                    Tags:
                    <ul>
                        {each friend.tags {body (item)
                        <li>
                            {item}
                        </li>
                        }}
                    </ul>
                </li>
                }}
                {if friend.friends.length {body
                <li>
                    Friends:
                    <ul>
                        {each friend.friends {body (f)
                        <li>
                            {f.name} ({f.id})
                        </li>
                        }}
                    </ul>
                </li>
                }}
            </ul>
        </div>
        }}
    </div>
</body>
</html>